datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Type {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  pokemonCards PokemonCard[] @relation("PokemonCardTypes")
}

model PokemonCard {
  id         Int    @id @default(autoincrement())
  name       String @unique
  pokedexId  Int    @unique
  lifePoints Int
  size       Float?
  weight     Float?
  imageUrl   String?
  types      Type[] @relation("PokemonCardTypes")
}